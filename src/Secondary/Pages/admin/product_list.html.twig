{% extends 'admin/template.html.twig' %}

{% block content %}
    <style>
        table {
            border-collapse: collapse;
        }

        tr, th, td, table {
            border: 1px solid black;
        }

        td {
            padding: 5px;
        }

        .message {
            color: orange;
        }

        .errors {
            color: darkred;
        }
    </style>

    <div class="message">{{ message }}</div>
    <div class="errors">{{ errors }}</div>

    <h1>Список активных продуктов</h1>
    <table>
        <tr><th>Название</th><th>Цена</th><th>Название вложенных товаров</th></tr>
        {% for product in products %}
            <tr>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.innerDescription }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
